# Solar System Intelligence Engine Configuration
# Copy this file to .env and modify values as needed

# Application settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/solar_system_intelligence.log

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Redis cache settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000

# External API settings
NASA_MARS_API_URL=https://mars.nasa.gov/rss/api/
NOAA_SPACE_WEATHER_URL=https://services.swpc.noaa.gov/json/

# API rate limiting
API_RATE_LIMIT=60
API_TIMEOUT=30

# Ephemeris data settings
EPHEMERIS_DATA_DIR=./ephemeris_data
EPHEMERIS_FILES=["de440.bsp", "de441.bsp"]

# Performance settings
MAX_CONCURRENT_USERS=50
QUERY_TIMEOUT_MS=100
DASHBOARD_LOAD_TIMEOUT=3

# Data persistence settings
DATABASE_URL=sqlite:///solar_system.db
DATA_RETENTION_DAYS=30
STORAGE_MAX_SIZE_MB=1000

# Forecasting settings
FORECAST_DAYS=365
SIMULATION_STEP_HOURS=24

# Space weather thresholds
XRAY_M_CLASS_THRESHOLD=1e-5
XRAY_X_CLASS_THRESHOLD=1e-4

# Dashboard settings
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_UPDATE_INTERVAL=60